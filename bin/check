#!/usr/bin/env ruby

def system!(*args)
  system(*args, exception: true)
end

[
  "bin/rails zeitwerk:check",
  "bin/rails sorbet:update",
  "yarn prettier . --write",
  "bin/erb_lint --lint-all",
  "bin/standardrb",
  "bin/srb tc",
  "bin/rspec"
].each do |command|
  puts "=== `#{command}` を実行中..."
  system!(command)
end
