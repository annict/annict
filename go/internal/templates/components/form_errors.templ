package components

import "github.com/annict/annict/internal/session"

// FormErrors はフォームのグローバルエラーを表示します
templ FormErrors(formErrors *session.FormErrors) {
	if formErrors != nil && len(formErrors.Global) > 0 {
		for _, errorMsg := range formErrors.Global {
			<div class="alert-destructive">
				<h2>{ errorMsg }</h2>
			</div>
		}
	}
}
