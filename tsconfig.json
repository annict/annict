{
  "compilerOptions": {
    "target": "ESNext",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/javascript/**/*"],
  "exclude": ["node_modules"]
}
