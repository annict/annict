<mj-wrapper background-color="#fff" padding-left="20px" padding-right="20px">
  <mj-section>
    <mj-column>
      <mj-text align="center"><%= I18n.t("email_notification_mailer.liked_episode_record.liked_your_episode_records", name: @user.profile.name, username: @user.username) %></mj-text>
    </mj-column>
  </mj-section>

  <mj-section>
    <mj-column width="35%">
      <mj-image src="<%= ann_work_image_url(@work, width: 300, format: :jpg) %>" align="center" href="<%= work_url(@work) %>"></mj-image>
    </mj-column>
    <mj-column width="65%">
      <mj-text font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@work.local_title}" %></mj-text>
      <mj-text padding-top="0px"><%= @episode.title_with_number %></mj-text>
    </mj-column>
  </mj-section>

  <% if @episode_record.body.present? %>
    <mj-section padding="10px 0">
      <mj-column>
        <mj-text align="center" line-height="22px"><%= "#{@episode_record.body}" %></mj-text>
      </mj-column>
    </mj-section>
  <% end %>

  <mj-section>
    <mj-column>
      <mj-button href="<%= record_url(username: @liked_user.username, record_id: @episode_record.record_id, utm_source: 'email_notification', utm_campaign: 'liked_episode_record', utm_medium: 'email', domain: local_domain) %>" background-color="#f85b73">
        <%= I18n.t("email_notification_mailer.liked_episode_record.view_record") %>
      </mj-button>
    </mj-column>
  </mj-section>

  <mj-section border="1px solid rgba(0, 0, 0, .08)">
    <mj-column>
      <mj-image src="<%= ann_avatar_image_url(@user, width: 140, format: :jpg) %>" align="center" width="70px" border-radius="50%" href="<%= profile_url(@user.username, utm_source: 'email_notification', utm_campaign: 'liked_episode_record', utm_medium: 'email', domain: local_domain) %>"></mj-image>
      <mj-text align="center" font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@user.profile.name}" %></mj-text>
      <mj-text align="center" padding-top="0px"><%= "@#{@user.username}" %></mj-text>
      <mj-text align="center" line-height="22px"><%= "#{@user.profile.description}" %></mj-text>
      <mj-button href="<%= profile_url(@user.username, utm_source: 'email_notification', utm_campaign: 'liked_episode_record', utm_medium: 'email', domain: local_domain) %>" background-color="#f85b73"><%= I18n.t("email_notification_mailer.liked_episode_record.view_profile") %></mj-button>
    </mj-column>
  </mj-section>
</mj-wrapper>
