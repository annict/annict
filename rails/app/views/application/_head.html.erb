<% if display_ads? %>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=<%= ENV.fetch('GOOGLE_AD_CLIENT') %>" crossorigin="anonymous"></script>
<% end %>

<%= ann_display_meta_tags %>
<meta http-equiv="x-dns-prefetch-control" content="on">
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
<%= yield :head_meta %>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<link rel="dns-prefetch" href="//kit.fontawesome.com">
<link rel="dns-prefetch" href="//www.googletagmanager.com">

<link rel="shortcut icon" href="/images/favicon.png" type="image/png">
<link rel="canonical" href="<%= "#{request.protocol}#{request.host_with_port}#{request.path}" %>">
<link rel="alternate" hreflang="ja" href="<%= "#{ENV.fetch('ANNICT_URL')}#{request.path}" %>">
<link rel="alternate" hreflang="en" href="<%= "#{ENV.fetch('ANNICT_EN_URL')}#{request.path}" %>">
<link rel="alternate" hreflang="x-default" href="<%= "#{ENV.fetch('ANNICT_URL')}#{request.path}" %>">
<link href="/manifest.json" rel="manifest">

<%= annict_config %>

<%= yield :head_vendor_assets %>
<script defer src="/js/fontawesome.min.js"></script>
<script defer src="/js/solid.min.js"></script>
<script defer src="/js/regular.min.js"></script>
<script defer src="/js/brands.min.js"></script>
<link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
<%= yield :head_assets %>
