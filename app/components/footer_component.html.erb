<div class="c-footer py-5">
  <div class="c-footer__main">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-sm-3 mb-3 mb-sm-0">
          <h2 class="mb-1">
            <%= link_to "Annict", root_path %>
          </h2>

          <div class="c-footer__description mb-3 small">
            The platform for anime addicts.
          </div>

          <div class="c-footer__social-links">
            <h4>
              <div class="row">
                <% social_urls.each do |url, icon_name| %>
                  <div class="col col-auto">
                    <%= link_to url, class: "h2", target: "_blank", rel: "noopener" do %>
                      <i class="fab fa-<%= icon_name %>"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </h4>
          </div>
        </div>

        <div class="col-12 col-sm-3 mb-3 mb-sm-0">
          <h4 class="font-weight-bold mb-3">
            <%= t "noun.services" %>
          </h4>

          <ul class="c-footer__list list-unstyled">
            <% service_urls.each do |link_url, link_title| %>
              <li class="mb-2">
                <%= link_to link_title, link_url, rel: "noopener", target: "_blank" %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="col-12 col-sm-3 mb-3 mb-sm-0">
          <h4 class="font-weight-bold mb-3">
            <%= t "noun.contents" %>
          </h4>

          <ul class="c-footer__list list-unstyled">
            <% content_urls.each do |link_url, link_title, is_for_japanese| %>
              <% next if !helpers.locale_ja? && is_for_japanese %>

              <li class="mb-2">
                <%= link_to link_title, link_url, target: "_blank" %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="col-12 col-sm-3">
          <h4 class="font-weight-bold mb-3">
            <%= t "noun.seasonal_anime" %>
          </h4>

          <ul class="c-footer__list list-unstyled">
            <% Season.latest_slugs.each do |slug| %>
              <li class="mb-2">
                <% year, name = slug.split("-") %>
                <%= link_to Season.new(year, name).local_name, season_works_path(slug: slug) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="c-footer__auxiliary">
    <div class="container-fluid py-2">
      <div class="align-items-center row">
        <div class="col-6">
          <h4 class="d-inline-block font-weight-bold mb-0 mr-2 small">
            <%= t("noun.language") %>:
          </h4>

          <ul class="d-inline-block list-inline mb-0">
            <% [
              [helpers.local_url_with_path(locale: :ja), "日本語"],
              [helpers.local_url_with_path(locale: :en), "English"]
            ].each do |link_url, link_title| %>
              <li class="list-inline-item">
                <%= link_to link_title, link_url %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="col-6 text-right">
          <div class="c-footer__copyright small">
            <i class="fal fa-copyright mr-1"></i>
            2014-2020 Annict
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
