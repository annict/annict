<div class="c-subnav c-subnav--transparent">
  <%= link_to work_path(work_entity.database_id), class: "c-subnav__link #{'c-subnav__link--active' if page_category.in?(%w(work))}" do %>
    <div class="c-subnav__item">
      <%= t "noun.detail" %>
    </div>
  <% end %>

  <% unless work_entity.is_no_episodes %>
    <%= link_to work_episodes_path(work_entity.database_id), class: "c-subnav__link #{'c-subnav__link--active' if page_category.in?(%w(episode episode_list))}" do %>
      <div class="c-subnav__item">
        <%= t "noun.episodes" %>
      </div>
    <% end %>
  <% end %>

  <%= link_to work_records_path(work_entity.database_id), class: "c-subnav__link #{'c-subnav__link--active' if page_category.in?(%w(work_record_list))}" do %>
    <div class="c-subnav__item">
      <%= t "noun.records" %>
    </div>
  <% end %>
</div>
