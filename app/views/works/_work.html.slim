.work data-work-id="#{work.id}"
  .media
    = link_to work_path(work), class: 'pull-left' do
      = image_tag work.main_item.image.thumb('140x140').url, size: '70x70', alt: work.title
    .media-body
      .title
        = link_to work.title, work_path(work)
    .work-statistics
      span.watchers-count
        i.fa.fa-eye
        = work.watchers_count
      span.checkins-count
        i.fa.fa-check
        = work.checkins_count
    - if user_signed_in? && user == current_user
      - if 'channel_works' != params[:controller]
        = render 'status_selector', mini: true, work: work
      - else
        - if work.channels.present?
          = render 'works/channel_selector', mini: true, work: work

      - if 'recommend' == params[:action]
        = react_component('Annict.Components.HideRecommendedWorkLink', workId: work.id)
  hr
