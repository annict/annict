<% title = t "head.title.db.series_works.new" %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<div class="container-fluid py-3">
  <div class="mb-3">
    <div class="mb-1">
      <%= link_to t("head.title.db.series_works.index"), db_series_work_list_path(@series) %>
    </div>
    <h1>
      <%= title %>
    </h1>
  </div>

  <div class="mb-3">
    <%= render "v4/db/series/subnav", series: @series %>
  </div>

  <div class="mb-3 row">
    <div class="col-6">
      <%= form_with model: @form, url: db_series_work_list_path(@series), local: true do |f| %>
        <%= render "application/components/error_panel", resource: f.object %>

        <div class="form-group">
          <%= f.label :rows, class: "c-label-required" %>
          <%= f.text_area :rows, class: "form-control", autofocus: true, required: true, rows: 30 %>
        </div>

        <%= f.submit t("helpers.submit.create"), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-6">
      <%= render "sidebar_new" %>
    </div>
  </div>
</div>
