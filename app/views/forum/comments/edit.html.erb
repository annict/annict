<% title = t "head.title.forum.comments.edit" %>
<% set_meta_tags(title: title, og: { title: title }, reverse: true, prefix: false) %>

<%= render "forum/application/nav", post: @post %>

<div class="container py-3 u-container-flat">
  <div class="card u-card-flat">
    <div class="card-body">
      <%= render "forum/comments/form", comment: @comment, form_url: forum_comment_path(@comment.forum_post, @comment), form_method: :patch, submit_text: t("verb.update") %>
    </div>
  </div>
</div>
