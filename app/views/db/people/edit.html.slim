- title @person.name

.l-topbar.container-fluid.px-1
  .row.flex-items-xs-between
    .col-xs-8
      = render "db/application/topbar_title", parent: @person.decorate.local_name.truncate(70)
    .col-xs.text-xs-right
      = link_to person_url(@person, subdomain: false), class: "btn btn-outline-primary", target: "_blank" do
        = icon "external-link"
        = t "resources.person.go_to_person"

.container-fluid.p-1
  .row
    .col-xs-6
      .c-card.p-1
        = render "form", person: @person
    .col-xs-6
      = render "sidebar"
