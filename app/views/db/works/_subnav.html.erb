<ul class="justify-content-center nav nav-pills">
  <%= active_link_to(
    t("noun.work"),
    db_edit_work_path(work),
    class: "nav-link",
    class_active: "active",
    active: current_page?(db_edit_work_path(work))
  ) %>

  <% unless work.no_episodes? %>
    <%= active_link_to(
      t("noun.episodes"),
      db_episode_list_path(work),
      class: "nav-link",
      class_active: "active",
      active: params[:controller]  == "db/episodes"
    ) %>
  <% end %>

  <%= active_link_to(
    t("noun.programs"),
    db_program_list_path(work),
    class: "nav-link",
    class_active: "active",
    active: params[:controller]  == "db/programs"
  ) %>

  <% unless work.no_episodes? %>
    <%= active_link_to(
      t("noun.slots"),
      db_slot_list_path(work),
      class: "nav-link",
      class_active: "active",
      active: params[:controller]  == "db/slots"
    ) %>
  <% end %>

  <%= active_link_to(
    t("noun.casts"),
    db_cast_list_path(work),
    class: "nav-link",
    class_active: "active",
    active: params[:controller]  == "db/casts"
  ) %>

  <%= active_link_to(
    t("noun.staffs"),
    db_staff_list_path(work),
    class: "nav-link",
    class_active: "active",
    active: params[:controller]  == "db/staffs"
  ) %>

  <%= active_link_to(
    t("noun.work_image"),
    db_work_image_detail_path(work),
    class: "nav-link",
    class_active: "active",
    active: params[:controller]  == "db/work_images"
  ) %>

  <%= active_link_to(
    t("noun.pv"),
    db_trailer_list_path(work),
    class: "nav-link",
    class_active: "active",
    active: params[:controller]  == "db/trailers"
  ) %>
</ul>
