.container.h-100
  .row.flex-items-xs-middle.h-100
    .col-xs-6.offset-xs-3
      .text-xs-center.mb-3
        = link_to root_path do
          = image_tag "logos/color-mizuho.png", size: "50x61", alt: "Annict"
      .c-card.px-1.py-2.mb-1
        .c-sign-up-form
          h1.text-xs-center.mb-2 = t "messages.passwords.new.forgot_your_password"

          = form_for resource, url: password_path do |f|
            = render "application/components/error_panel", resource: resource

            .form-group
              = f.label :email
              = f.email_field :email, class: "form-control", autofocus: true, required: true

            .text-xs-center
              = f.button class: "btn btn-primary" do
                = icon "send"
                = t "words.submit"
      
      .text-xs-center
        small = t "messages.registrations.new.sign_in_link_html", link: link_to(t("words.sign_in"), new_user_session_path)
