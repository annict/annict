<mj-section background-color="#fff">
  <mj-column>
    <mj-text align="center"><%= I18n.t("email_notification_mailer.liked_record.liked_your_records", name: @user.profile.name, username: @user.username) %></mj-text>

    <mj-section border="1px solid rgba(0, 0, 0, .08)" padding="20px">
      <mj-section padding="0">
        <mj-column width="20%">
          <mj-image src="<%= ann_email_image_url(@work.work_image, :attachment, size: "140x140") %>" align="center" width="70" href="<%= work_url(@work) %>" padding-right="0px"></mj-image>
        </mj-column>
        <mj-column width="80%">
          <mj-text font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@work.decorate.local_title}" %></mj-text>
          <mj-text padding-top="0px"><%= @episode.decorate.title_with_number %></mj-text>
        </mj-column>
      </mj-section>

      <% if @record.comment.present? %>
        <mj-section padding="10px 0">
          <mj-text align="center"><%= "#{@record.comment}" %></mj-text>
        </mj-section>
      <% end %>

      <mj-section padding="0">
        <mj-column>
          <mj-button href="<%= record_url(username: @liked_user.username, id: @record.id, utm_source: 'email_notification', utm_campaign: 'liked_record', utm_medium: 'email') %>" background-color="#f85b73"><%= I18n.t("email_notification_mailer.liked_record.view_record") %></mj-button>
        </mj-column>
      </mj-section>
    </mj-section>

    <mj-section border="1px solid rgba(0, 0, 0, .08)" padding="20px">
      <mj-column>
        <mj-image src="<%= ann_email_image_url(@user.profile, :tombo_avatar, size: "140x140") %>" align="center" width="70" border-radius="50%" href="<%= user_url(@user.username, utm_source: 'email_notification', utm_campaign: 'liked_record', utm_medium: 'email') %>"></mj-image>
        <mj-text align="center" font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@user.profile.name}" %></mj-text>
        <mj-text align="center" padding-top="0px"><%= "@#{@user.username}" %></mj-text>
        <mj-text align="center"><%= "#{@user.profile.description}" %></mj-text>
        <mj-button href="<%= user_url(@user.username, utm_source: 'email_notification', utm_campaign: 'liked_record', utm_medium: 'email') %>" background-color="#f85b73"><%= I18n.t("email_notification_mailer.liked_record.view_profile") %></mj-button>
      </mj-column>
    </mj-section>
  </mj-column>
</mj-section>
