.row
  - series.series_works.where.not(work: work.id).sort_season.each do |series_work|
    - work = series_work.work
    .col-2.p-0.pr-3.mb-3
      .c-card
        = link_to anime_detail_path(work) do
          .c-hover-image
            .c-hover-image__image
              = ann_image_tag(work.anime_image, :image, size: "280x", ratio: "3:4", class: "img-fluid rounded")
            .c-hover-image__over
        .p-1
          .u-very-small
            = link_to work.local_title, anime_detail_path(work)

          - summary = series_work.local_summary(fallback: false)
          - if summary.present?
            .u-very-small
              = summary
