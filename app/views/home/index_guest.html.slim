- title = t "head.title.home.index_guest"
- set_meta_tags(title: title, reverse: false)

.p-application__content.mb-4
  .p-top-hero.d-flex.align-items-center.position-relative
    .p-top-hero__bg-image.position-absolute.w-100 style="background-image: url(#{ann_image_url(@cover_image_work.work_image, :image, size: '640x', ratio: "4:3", blur: 40)});"
    .p-top-hero__content.text-center.align-self-center
      h1.display-1.mb-3 = t("messages.home.index_guest.hero_title")
      p.lead.p-top-hero__description.mb-4
        = t "messages.home.index_guest.hero_description_html"
      = link_to new_user_registration_path, class: "btn btn-primary" do
        = icon "rocket"
        = t "messages.home.index_guest.start_tracking"

  .container.p-home-index__main
    h2.text-center.pt-5.mb-5
      = t "noun.popular_airing_anime"
    .c-card.p-3.mb-3
      = render "home/top_work", top_work: @season_top_work
    .c-card.p-3
      = render "home/other_works", other_works: @season_works
      .text-center.mt-4
        = link_to t("verb.view_more"), season_works_path(slug: ENV["ANNICT_CURRENT_SEASON"]), class: "btn btn-primary"

    h2.text-center.pt-5.mb-5
      = t "noun.popular_anime"
    .c-card.p-3.mb-3
      = render "home/top_work", top_work: @top_work
    .c-card.p-3
      = render "home/other_works", other_works: @works
      .text-center.mt-4
        = link_to t("verb.view_more"), popular_works_path, class: "btn btn-primary"

= render "application/components/footer"

- content_for :js_templates do
  = render "application/js_templates/status_selector"
