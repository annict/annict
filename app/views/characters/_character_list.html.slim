.p-character-list
  - if casts.present?
    - casts.each_slice(3).each do |casts|
      .p-character-list__row.row
        - casts.each do |cast|
          .col-xs-4
            .row
              .p-character-list__character-image.col-xs.pr-0
                = link_to character_path(cast.character) do
                  = image_tag ann_image_url(cast.character.character_image, :attachment, size: "64x64"), class: "img-fluid rounded"
              .col-xs
                .p-character-list__character-name = link_to cast.character.decorate.local_name, character_path(cast.character)
                .p-character-list__cast-name.small
                  span CV: 
                  = link_to cast.decorate.local_name_with_old, person_path(cast.person)
