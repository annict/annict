- if works.present?
  .c-card.px-3
    - works.each do |work|
      .u-underline.py-3
        .row
          .col-2.pr-0
            = link_to anime_detail_path(work) do
              = render WorkImageComponent.new(image_url_1x: ann_image_url(work.anime_image, :image, size: "270x"), image_url_2x: ann_image_url(work.anime_image, :image, size: "540x"))
            - if work.anime_image.present?
              .u-very-small.text-right
                = work.anime_image.asin_or_copyright_text
          .col
            .mb-1.u-lh-0
              = work.media_label
            h3.h3.font-weight-bold.mb-1
              = link_to work.local_title, anime_detail_path(work), class: "u-text-body"
            .mb-2
              span.font-weight-bold.mr-1 = work.watchers_count
              span.text-muted.small Watchers
            .div style="width: 200px;"
              = render StatusSelectorComponent.new(work_id: work.id, page_category: page_category)
- else
  = render "application/components/empty", text: t("messages._empty.no_works")
